<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="false">        
         <layer-list>
             <!-- SHADOW -->   
             <item>
                 <shape>
                     <solid android:color="#1C4010"/>
                     <corners android:radius="20dp"/>
                 </shape>
             </item>
             <!-- BUTTON -->
             <item android:bottom="5px">
                 <shape>
                     <padding android:bottom="5dp"/>
                     <gradient
                         android:startColor="#1FA511"
                         android:endColor="#085809"
                         android:angle="270" />
                     <corners
                         android:radius="20dp"/>
                     <padding
                         android:left="10dp"
                         android:top="10dp"
                         android:right="10dp"
                         android:bottom="10dp"/>
                 </shape>
             </item>
         </layer-list> 
     </item>
    
    <item android:state_pressed="true">
        <layer-list>
             <!-- SHADOW -->   
             <item>
                 <shape>
                     <solid android:color="#1C4010"/>
                     <corners android:radius="20dp"/>
                 </shape>
             </item>
             <!-- BUTTON -->
             <item android:bottom="5px">
                 <shape>
                     <padding android:bottom="5dp"/>
                     <gradient
                         android:endColor="#085809"
                         android:startColor="#1FA511"
                         android:angle="270" />
                     <corners
                         android:radius="20dp"/>
                     <padding
                         android:left="10dp"
                         android:top="10dp"
                         android:right="10dp"
                         android:bottom="10dp"/>
                 </shape>
             </item>
         </layer-list> 
    </item>
</selector>